@page
@model Server.Pages.Admin.Users.IndexModel

@{
	var pageTitle =
		$"{Resources.DataDictionary.ListOf} {Resources.DataDictionary.Users}";

	ViewData["Title"] = pageTitle;
}


<partial name="PartialViews/_DisplayPageMessages" />

<h3 class="mt-3 mb-3 text-center">
	@(pageTitle)
</h3>

<div class="row mb-3">
	<div class="col">
		<a asp-page="Create" class="btn btn-primary">
			<span>
				<i class="mx-1 bi bi-plus-square"></i>
				@(Resources.ButtonCaptions.Create)
			</span>
		</a>
	</div>
</div>

<table class="table table-hover">
	<thead class="text-center">
		<tr>
			<th>@(Resources.DataDictionary.UserName)</th>
			<th>@(Resources.DataDictionary.Email)</th>
			<th>@(Resources.DataDictionary.Role)</th>
			<th>@(Resources.DataDictionary.InsertDateTime)</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model.ViewModel)
		{
			<tr>
				<td class="align-middle text-center">
					@(user.Username)
				</td>
				<td class="align-middle text-center">
					@(user.Email ?? "---")
				</td>
				<td class="align-middle text-center">
					@(user.Role)
				</td>
				<td class="align-middle text-center" dir="ltr">
					@(user.InsertDateTimeFa)
				</td>
				<td>
					<div class="btn-group" role="group" aria-label="Basic example">
						<a asp-page="Update" asp-route-Id="@(user.Id)" type="button" class="btn btn-warning">@(Resources.ButtonCaptions.Edit)</a>
						<a asp-page="Delete" asp-route-Id="@(user.Id)" type="button" class="btn btn-danger">@(Resources.ButtonCaptions.Delete)</a>
						<a asp-page="../Categories/Index" asp-route-userId="@(user.Id)" type="button" class="btn btn-primary">@(Resources.ButtonCaptions.Categories)</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>